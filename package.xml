   </dir>
   <dir name="src" baseinstalldir="pear2">
    <dir name="Pyrus">
     <dir name="Developer">
      <dir name="CoverageAnalyzer">
       <dir name="SourceFile">
        <file role="php" name="PerTest.php"/>
       </dir>
       <dir name="Web">
        <file role="php" name="Aggregator.php"/>
