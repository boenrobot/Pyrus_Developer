       </dir>
       <file role="php" name="Commands.php"/>
       <file role="php" name="PEAR2SVN.php"/>
       <file role="php" name="PECL.php"/>
       <file role="php" name="v2.php"/>
      </dir>
      <dir name="Runphpt">
       <file role="php" name="Exception.php"/>
       <file role="php" name="Runner.php"/>
      </dir>
     </dir>
    </dir>
   </dir>
  </dir>
 </contents>
 <dependencies>
